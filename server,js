// server.js

const express = require('express');
const app = express();
const PORT = process.env.PORT || 3000; // Usa variÃ¡veis de ambiente (Conceito A)

// Configura o Express para entender JSON (corpo das requisiÃ§Ãµes POST/PUT)
app.use(express.json());

// Importa e usa as rotas
const routes = require('./routes');
app.use('/api', routes); // Prefixo '/api' para todas as rotas

// Rota de teste simples
app.get('/', (req, res) => {
    res.status(200).send({ mensagem: "API da Biblioteca - Aluno 3 estÃ¡ rodando!" });
});

// Inicia o servidor
app.listen(PORT, () => {
    console.log(`ðŸš€ Servidor rodando em http://localhost:${PORT}`);
});